<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/all_list_bg_icon"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:paddingTop="10px">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_symbol_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RURCAD"
                    android:textColor="@color/one_text_color"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/tv_symbol_cn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="欧元加元"
                    android:textColor="@color/two_text_color"
                    android:textSize="@dimen/text_size_24" />

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/buy_icon"
                    app:layout_auto_basewidth="height" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="55px"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="67px"
                    android:layout_height="55px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20px"
                    android:padding="20px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/history_arrow_down" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_position_price"
                            android:textColor="@color/two_text_color"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_open_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44px"
                            android:text="0.0000"
                            android:textColor="@color/two_text_color"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/close_position_price"
                            android:textColor="@color/two_text_color"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tv_position_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44px"
                            android:text="0.0000"
                            android:textColor="@color/two_text_color"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/income"
                            android:textColor="@color/two_text_color"
                            android:textSize="@dimen/text_size_24" />

                        <TextView
                            android:id="@+id/tv_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="21px"
                            android:text="$0.00"
                            android:textColor="@color/rise_color"
                            android:textSize="@dimen/text_size_24" />
                    </com.zhy.autolayout.AutoLinearLayout>


                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19px"
                        android:text="0000-00-00 00:00:00 "
                        android:textColor="@color/two_text_color"
                        android:textSize="@dimen/text_size_22" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <!--**************************************展开更多***********************************************-->

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="25px"
        android:paddingLeft="30px">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="30px"
            android:background="@color/bg_or_division_color" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25px"
            android:text="订单号：000000"
            android:textColor="@color/two_text_color"
            android:textSize="@dimen/text_size_24" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inventory_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />


            <TextView
                android:id="@+id/tv_handling_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_trade_lots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />


            <TextView
                android:id="@+id/tv_use_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stop_loss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />


            <TextView
                android:id="@+id/tv_stop_profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_open_position_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25px"
                android:text="订单号：000000"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_24" />


            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="67px"
                android:layout_height="55px"
                android:layout_marginRight="20px"
                android:padding="20px"
                android:scaleType="fitXY"
                android:src="@mipmap/history_arrow_up" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>