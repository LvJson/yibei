<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/all_list_bg_icon"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="25px"
        android:paddingLeft="30px"
        android:paddingTop="25px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_symbol_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RURCAD"
                    android:textColor="@color/one_text_color"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/tv_symbol_cn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="欧元加元"
                    android:textColor="@color/two_text_color"
                    android:textSize="@dimen/text_size_24" />

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/buy_icon"
                    app:layout_auto_basewidth="height" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_open_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0000"
                        android:textColor="@color/two_text_color"
                        android:textSize="24px" />

                    <ImageView
                        android:layout_width="25px"
                        android:layout_height="16px"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/tv_open_price"
                        android:src="@mipmap/history_right_arrow"
                        app:layout_auto_basewidth="height" />
                </com.zhy.autolayout.AutoLinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_one"
                    android:text="@string/open_position_price"
                    android:textColor="@color/two_text_color"
                    android:textSize="24px" />


                <TextView
                    android:id="@+id/tv_position_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/ll_one"
                    android:text="0.0000"
                    android:textColor="@color/two_text_color"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_position_price"
                    android:layout_toRightOf="@id/ll_one"
                    android:text="@string/close_position_price"
                    android:textColor="@color/two_text_color"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="122px"
            android:background="@color/four_text_color" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:layout_toRightOf="@+id/tv_one"
                android:text="$0.00"
                android:textColor="@color/rise_color"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_one"
                android:layout_marginTop="30px"
                android:text="0000-00-00 00:00:00 "
                android:textColor="@color/two_text_color"
                android:textSize="@dimen/text_size_22" />

            <ImageView
                android:layout_width="27px"
                android:layout_height="15px"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="36px"
                android:layout_marginRight="40px"
                android:scaleType="fitXY"
                android:src="@mipmap/history_arrow_down" />

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>