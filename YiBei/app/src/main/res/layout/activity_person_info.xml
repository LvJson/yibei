<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_or_division_color"
    android:orientation="vertical">

    <include layout="@layout/bar_white_bg_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_choose_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="20px"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:paddingTop="20px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/head"
            android:textColor="@color/one_text_color"
            android:textSize="@dimen/text_size_30" />


        <com.ts.lys.yibei.customeview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@mipmap/default_avatar_icon"
            app:civ_border_color="@color/bg_or_division_color"
            app:civ_border_width="1dp"
            app:layout_auto_basewidth="height" />

    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/incloud_division_1dp_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="40px"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:paddingTop="40px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nickname"
            android:textColor="@color/one_text_color"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="易贝外汇"
            android:textColor="@color/two_text_color"
            android:textSize="@dimen/text_size_30" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/incloud_division_1dp_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="40px"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:paddingTop="40px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bind_phone_num"
            android:textColor="@color/one_text_color"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*** **** ****"
            android:textColor="@color/two_text_color"
            android:textSize="@dimen/text_size_30" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_margin="@dimen/padding_left_and_right"
        android:background="@drawable/btn_select"
        android:text="@string/sign_out"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32" />
</com.zhy.autolayout.AutoLinearLayout>