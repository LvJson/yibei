<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="360px"
            android:background="@drawable/order_gradual_change_bg"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/float_profit_loss"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/tv_float_loss_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:paddingLeft="15dp"
                android:text="$0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_60" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginTop="30px">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_useful_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_useful_margin"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:text="@string/userful_margin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_have_used_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_have_used_margin"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:text="@string/have_used_margin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_account_worth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_account_worth"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:text="@string/account_worth"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_account_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_account_balance"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:text="@string/account_balance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24" />

                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="match_parent"
            android:layout_height="72px">

        </net.lucode.hackware.magicindicator.MagicIndicator>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </com.zhy.autolayout.AutoLinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>